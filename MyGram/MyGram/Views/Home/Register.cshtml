<form action="~/Home/RegisterUser" method="post" >
    <fieldset>
        <legend>User Information </legend>
        <table>
            <tbody>
                <tr>
                    <td>
                        <label label for="UserName">User Name:</label>
                    </td>
                    <td>
                        <input id="UserName" name="UserName"
                               type="text"
                               size="20" maxlength="15"
                               placeholder="Type your User name" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Password:</label>
                    </td>
                    <td>
                        <input id="Password" name="Password"
                               type="password"
                               size="20" maxlength="15"
                               placeholder="Type your password" />
                    </td>
                </tr>
                <tr class="resgister">
                    <td colspan="2">
                        <button class="registerbutton" type="submit" value="Register">Register</button>
                        <button class="registerbutton"type="reset" />reset</button>
                    </td>
                </tr>
            </tbody>
        </table>

    </fieldset>
</form>